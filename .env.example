# Example Environment Variables for Stellr Backend
# Copy this file to .env and fill in your actual values
# NEVER commit your actual .env file to git!

# ==============================================
# AI SERVICES (Required)
# ==============================================
ANTHROPIC_API_KEY="sk-ant-api03-your-anthropic-key-here"  # For most AI operations
PERPLEXITY_API_KEY="pplx-your-perplexity-key-here"        # For research (Optional)

# ==============================================
# AI MODEL CONFIGURATION
# ==============================================
MODEL="claude-3-7-sonnet-20250219"  # Recommended models: claude-3-7-sonnet-20250219, claude-3-opus-20240229
PERPLEXITY_MODEL="sonar-pro"        # Make sure you have access to sonar-pro
MAX_TOKENS=64000                     # Maximum tokens for model responses
TEMPERATURE=0.2                      # Temperature for responses (0.0-1.0) - lower = less creativity
DEBUG=false                          # Enable debug logging (true/false)
LOG_LEVEL=info                       # Log level (debug, info, warn, error)

# ==============================================
# APPLICATION SETTINGS
# ==============================================
DEFAULT_SUBTASKS=5                   # Default number of subtasks when expanding
DEFAULT_PRIORITY=medium              # Default priority for generated tasks (high, medium, low)
PROJECT_NAME=stellr-dating-app       # Project name for tasks.json metadata
# ==============================================
# REVENUECAT SUBSCRIPTIONS (Required)
# ==============================================
# RevenueCat Secret API Key (starts with sk_)
REVENUECAT_SECRET_KEY="sk_YOUR_SECRET_KEY_HERE"
# Webhook Authorization Key (custom string you create)
REVENUECAT_WEBHOOK_AUTH_KEY="your_custom_webhook_auth_key_here"

# ==============================================
# MONITORING & ALERTING
# ==============================================
SUPABASE_URL="https://your-supabase-project.supabase.co"
SUPABASE_SERVICE_ROLE_KEY="service-role-key"
SLACK_WEBHOOK_URL="https://hooks.slack.com/services/..."
SENTRY_ORG="stellr"
SENTRY_PROJECT="stellr-admin-dashboard"

# ==============================================
# PERSONA IDENTITY VERIFICATION (Required)
# ==============================================
# Secret API key from Persona dashboard (never expose in client)
PERSONA_API_KEY="persona_YOUR_SECRET_API_KEY_HERE"
# Webhook secret for verifying webhook signatures
PERSONA_WEBHOOK_SECRET="your_webhook_secret_from_persona_dashboard"
# Environment: 'sandbox' or 'production'
PERSONA_ENVIRONMENT="sandbox"
# Template ID for selfie + liveness verification
PERSONA_TEMPLATE_ID="itmpl_YOUR_TEMPLATE_ID_HERE"

